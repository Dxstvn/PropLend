{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["mocha", "chai", "node"]
  },
  "include": ["test/**/*.ts", "types/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
